{
  "name": "posthtml-beautify",
  "version": "0.2.5",
  "description": "A posthtml plugin to beautify you html files",
  "license": "MIT",
  "repository": "posthtml/posthtml-beautify",
  "homepage": "https://github.com/posthtml/posthtml-beautify#readme",
  "bugs": "posthtml/posthtml-beautify/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "version": "conventional-changelog -i changelog.md -s -r 0 && git add changelog.md && git commit -m \"build: update changelog\"",
    "prepare": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint {src,test}/*.js *.md --fix",
    "pretest": "clinton && npm run lint",
    "docs": "cross-env BABEL_ENV=docs webpack --progress --env.prod -p",
    "build": "rimraf lib && cross-env BABEL_ENV=production babel src -d lib --ignore docs",
    "test": "cross-env BABEL_ENV=production nyc ava",
    "serve": "cross-env BABEL_ENV=docs webpack-dashboard -- webpack-dev-server --content-base docs/ --open"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "beautify",
    "beautifier",
    "code-quality"
  ],
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "deepmerge": "^3.2.1",
    "posthtml-parser": "^0.4.1",
    "posthtml-render": "^1.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "ava": "*",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-minify": "^0.5.0",
    "babel-upgrade": "^1.0.1",
    "clinton": "^0.14.0",
    "conventional-changelog-cli": "^2.0.21",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-space": "^0.21.0",
    "eslint-plugin-ava": "^7.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-html": "^5.0.5",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-unicorn": "^9.1.0",
    "highlight.js": "^9.15.8",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.1",
    "is-promise": "^2.1.0",
    "lint-staged": "^8.2.1",
    "nyc": "^14.1.1",
    "posthtml": "^0.11.4",
    "posthtml-include": "^1.2.0",
    "posthtml-modules": "^0.4.2",
    "rimraf": "^2.6.3",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dashboard": "^3.0.7",
    "webpack-dev-server": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "pre-commit": "clinton && lint-staged",
      "commit-msg": "commitlint --extends=@commitlint/config-angular -e"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint",
    "*.md": "eslint"
  },
  "ava": {
    "files": [
      "test/test-*.js"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "env": {
      "docs": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "browsers": [
                  "ie 11",
                  "last 2 versions"
                ]
              }
            }
          ]
        ]
      },
      "production": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "4"
              }
            }
          ],
          [
            "minify",
            {
              "removeUndefined": false,
              "mangle": false
            }
          ]
        ],
        "plugins": [
          [
            "@babel/plugin-transform-runtime"
          ],
          "add-module-exports"
        ]
      }
    },
    "presets": []
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "html",
      "ava",
      "unicorn",
      "babel",
      "markdown"
    ],
    "extends": [
      "plugin:unicorn/recommended",
      "plugin:ava/recommended",
      "xo",
      "xo-space"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-new": "off"
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "docs/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
